<div class="ui tablet computer only padded grid">
	<div class="ui top fixed borderless fluid huge menu">
		<div class="ui container">
			<a href="/" class="header item">
				<img src="https://imgur.com/HrD1F2p.png" alt="logo">
			</a>
			<a class="item">
				<i class="list alternate outline icon"></i> Home
			</a>
			{{#link-to "my-account" class="item"}}
			<i class="user circle outline icon"></i> My Account
			{{/link-to}}
			<div class="right menu">
				{{#if session.isAuthenticated}}
				<a class="item">
					<button class="ui inverted button" {{action "invalidateSession"}}>Log out</button>
				</a>
				{{else}}
				{{#link-to "login" class="item"}}
				<button class="ui inverted button">Log In</button>
				{{/link-to}}
				{{#link-to "sign-up" class="item"}}
				<button class="ui blue inverted button">Sign Up</button>
				{{/link-to}}
				{{/if}}
				{{#link-to "about" class="item"}}
				About
				{{/link-to}}
			</div>
		</div>
	</div>
</div>
<div class="ui mobile only padded grid">
	<div class="ui top fixed borderless huge fluid menu">
		<a href="/" class="header item">
			<img src="https://imgur.com/HrD1F2p.png" alt="logo">
		</a>
		<div class="right menu">
			<div class="item">
				<button class="ui icon toggle basic button" id="mobile-button">
					<i class="bars icon"></i>
				</button>
			</div>
		</div>
		<div class="ui vertical borderless fluid menu">
			<a class="item">
				<i class="list alternate outline icon"></i> Home
			</a>
			{{#link-to "my-account" class="item"}}
			<i class="user circle outline icon"></i> My Account
			{{/link-to}}
			{{#if session.isAuthenticated}}
			<a class="item">
				<button class="ui inverted button">Log out</button>
			</a>
			{{else}}
			{{#link-to "login" class="item"}}
			<button class="ui inverted button">Log In</button>
			{{/link-to}}
			{{#link-to "sign-up" class="item"}}
			<button class="ui blue inverted button">Sign Up</button>
			{{/link-to}}
			{{/if}}
			{{#link-to "privacy-policy" class="item"}}
			About
			{{/link-to}}
		</div>
	</div>
</div>
<br>
<br>
<br>
{{outlet}}